{
  "extends": "solhint:recommended",
  "rules": {
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "code-complexity": ["warn", 5],
    "compiler-version": ["warn", "^0.8.24"],
    "const-name-snakecase": "warn",
    "contract-name-camelcase": "warn",
    "event-name-camelcase": "warn",
    "func-name-mixedcase": "warn",
    "func-order": "warn",
    "function-max-lines": ["warn", 50],
    "function-params-newline": "warn",
    "imports-on-top": "error",
    "indent": ["warn", 4],
    "mark-callable-contracts": "warn",
    "max-line-length": ["warn", 120],
    "max-states-count": ["warn", 15],
    "multiple-inheritance": "warn",
    "named-parameters-mapping": "warn",
    "no-constant": "warn",
    "no-empty-blocks": "warn",
    "no-global-import": "error",
    "no-inline-assembly": "warn",
    "no-shadowing": "warn",
    "no-unused-vars": "error",
    "ordering": "warn",
    "payable-fallback": "warn",
    "private-vars-leading-underscore": "warn",
    "reason-string": ["warn", {"minLength": 32}],
    "security-restrict-reentrancy-calls": "warn",
    "state-visibility": "error",
    "var-name-mixedcase": "warn",
    "visibility-modifier-order": "error"
  }
}
